{
    "name": "hnhdigital-os/laravel-slack",
    "description": "Laravel integration for the hnhdigital-os/php-slack package.",
    "keywords": ["slack", "laravel"],
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Rocco Howard",
            "email": "rocco@bluora.com.au"
        },
        {
            "name": "maknz",
            "email": "github@mak.geek.nz"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "bluora/php-slack": "dev-master"
    },
    "require-dev": {
        "phpmd/phpmd" : "@stable",
        "squizlabs/php_codesniffer": "^2.0"
    },    
    "autoload": {
        "psr-4": {
            "Bluora\\LaravelSlack\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bluora\\LaravelSlack\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "composer phpcs",
        "phpcs": "./vendor/bin/phpcs -p -s --standard=PSR2 ./src"
    }
}
